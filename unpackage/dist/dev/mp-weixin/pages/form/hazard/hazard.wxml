<view><view class="cu-bar bg-green solid-bottom"><view class="action"><text>{{label.hazardsources}}</text></view></view><form><view class="cu-form-group"><view class="title">名称</view><input placeholder="输入" data-event-opts="{{[['input',[['getName',['$event']]]]]}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">描述</view><textarea placeholder="多行输入" data-event-opts="{{[['input',[['getDescription',['$event']]]]]}}" bindinput="__e"></textarea></view><block wx:for="{{attribute.necessary}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="cu-form-group"><view class="title">{{item.name}}</view><block wx:if="{{item.type=='SmallIntegerField'}}"><picker mode="selector" range="{{item.List}}" data-index="{{index}}" data-event-opts="{{[['change',[['setValue',['$event']]]]]}}" bindchange="__e">{{item.value}}</picker></block><block wx:else><input placeholder="输入" data-index="{{index}}" data-event-opts="{{[['input',[['getValue',['$event']]]]]}}" bindinput="__e"/></block></view></block></block><view class="cu-form-group" style="display:block;"><view class="title">图片上传</view><block wx:if="{{photo}}"><image style="width:120rpx;height:120rpx;display:block;box-sizing:border-box;position:relative;margin:10rpx 0;" src="{{photo}}" data-event-opts="{{[['tap',[['takePhoto',['$event']]]]]}}" bindtap="__e"></image></block><block wx:else><image style="width:120rpx;height:120rpx;display:block;box-sizing:border-box;position:relative;margin:10rpx 0;" src="/static/img/camera.jpg" data-event-opts="{{[['tap',[['takePhoto',['$event']]]]]}}" bindtap="__e"></image></block></view></form><button data-event-opts="{{[['tap',[['accident',['$event']]]]]}}" style="position:relative;left:0rpx;margin-top:100rpx;margin-bottom:50rpx;background-color:#33cc99;color:white;" bindtap="__e">下 一 步</button></view>